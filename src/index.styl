* {
  box-sizing: border-box;
}

html, body, #root {
  margin: 0;
  height: 100%;
  font-family: 'Open Sans', sans-serif;
}

body, h1, h2, h3 {
  font-weight: 300
}

a {
  color: white;
  text-decoration: none;

  &:hover {
    color: #5aadbb;
  }
}

.block {
  width: 10%;
  border-bottom: solid 1px #ccc;
  border-right: solid 1px #ccc;
  padding: 2px 0;
  float: right;
}
