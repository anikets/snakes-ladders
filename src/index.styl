* {
  box-sizing: border-box;
}

html, body, #root {
  margin: 0;
  height: 100%;
  font-family: 'Open Sans', sans-serif;
}

body, h1, h2, h3 {
  font-weight: 300
}

a {
  color: white;
  text-decoration: none;

  &:hover {
    color: #5aadbb;
  }
}

.hidden {
  display: none !important;
}
.clearfix:before,
.clearfix:after {
  display: table;
  content: ' ';
  clear: both;
  float: none;
}
.f-right {
  float: right;
}

.btn {
  background: #369;
  color: #fff;
  border: 0;
  font-size: 16px;
  padding: 5px 20px;
  border-bottom: solid 3px rgba(0,0,0,0.5);
  outline: none;
  cursor: pointer;
  border-radius: 3px;
  transition: all 0.2s ease;
}
.btn:hover {
  background: #365;
}
.btn:focus {
  background: #333;
}
.btn:active {
  background: #000;
}

.block {
  width: 10%;
  border-bottom: solid 1px #ccc;
  border-right: solid 1px #ccc;
  padding: 2px 0;
  float: right;
  height: 40px;
  padding: 5px;
}

.player-one,
.player-two {
  display: inline-block;
  width: 20px;
  height: 20px;
  border-radius: 100%;
  vertical-align: middle;
  text-align: center;
  font-size: 14px;
  font-weight: bold;
  line-height: 1.3;
  color: #fff;
}
.player-one {
  background-color: red;
}
.player-two {
  background-color: blue;
}
.legend {
  margin: 10px;
}
