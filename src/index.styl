* {
  box-sizing: border-box;
}

html, body, #root {
  margin: 0;
  height: 100%;
  font-family: 'Open Sans', sans-serif;
}

body, h1, h2, h3 {
  font-weight: 300
}

a {
  color: white;
  text-decoration: none;

  &:hover {
    color: #5aadbb;
  }
}

.hidden {
  display: none !important;
}
.clearfix:before,
.clearfix:after {
  display: table;
  content: ' ';
  clear: both;
  float: none;
}
.f-right {
  float: right;
}
.f-left {
  float: left;
}
.text-center {
  text-align: center;
}

.btn {
  background: #369;
  color: #fff;
  border: 0;
  font-size: 16px;
  padding: 5px 20px;
  border-bottom: solid 3px rgba(0,0,0,0.5);
  outline: none;
  cursor: pointer;
  border-radius: 3px;
  transition: all 0.2s ease;
}
.btn:hover {
  background: #365;
}
.btn:active {
  background: #000;
}

.board {
  position: relative;
}
.block {
  width: 10%;
  border-bottom: solid 1px #ccc;
  border-right: solid 1px #ccc;
  padding: 2px 0;
  float: left;
  height: 40px;
  padding: 5px;
  text-align: right;
}
.player-one,
.player-two {
  display: inline-block;
  width: 25px;
  height: 25px;
  border-radius: 100%;
  vertical-align: middle;
  text-align: center;
  font-size: 14px;
  font-weight: bold;
  line-height: 1.3;
  box-shadow: inset 0px 0px 4px black, 0px 0px 3px black;
  color: #fff;
}
.player-one {
  background-color: red;
  background-image: radial-gradient(#ff9797, #f00);
  border: solid 3px red;
}
.player-two {
  background-color: blue;
  border: solid 3px blue;
}
.player-one.animated {
  position: absolute;
  transition: all 0.2s ease;
}
.player-present {
  animation: bgswap 3s infinite linear;
}
@keyframes bgswap {
  0% { background-color: yellow; }
  33% { background-color: cyan; }
  66% { background-color: lime; }
  100% { background-color: yellow; }
}
.stat-mini {
  font-size: 14px;
  padding: 0 10px;
}
.stat-mini:first-child {
  padding-left: 0;
}
.stat-mini:not(:last-child) {
  border-right: solid 1px #aaa;
}
.legend {
  margin: 10px;
  text-align: center;
}

.win-msg {
  font-weight: bold;
  color: green;
  position: fixed;
  bottom: 40px;
  left: 50%;
  transform: translateX(-50%);
  width: 300px;
  text-align: center;
  text-shadow: 1px 1px 1px yellow, 2px 2px 1px yellow, -1px -1px 1px yellow, -2px -2px 1px yellow;
}
